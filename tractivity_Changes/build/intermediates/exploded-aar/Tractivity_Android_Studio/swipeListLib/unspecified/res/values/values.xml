<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_app">#dedede</color>
    <color name="background_list_back">#e3e3e3</color>
    <color name="background_list_front">#ffffff</color>
    <color name="background_new_tag">#ff0000</color>
    <color name="line">#ffbcbcbc</color>
    <color name="text_description">#7e7e7e</color>
    <color name="text_new_tag">#ffffff</color>
    <color name="text_title">#444444</color>
    <declare-styleable name="SwipeListView"><attr format="boolean" name="swipeOpenOnLongPress"/><attr format="integer" name="swipeAnimationTime"/><attr format="dimension" name="swipeOffsetLeft"/><attr format="dimension" name="swipeOffsetRight"/><attr format="boolean" name="swipeCloseAllItemsWhenMoveList"/><attr format="reference" name="swipeFrontView"/><attr format="reference" name="swipeBackView"/><attr format="enum" name="swipeMode"><enum name="none" value="0"/><enum name="both" value="1"/><enum name="right" value="2"/><enum name="left" value="3"/></attr><attr format="enum" name="swipeActionLeft"><enum name="reveal" value="0"/><enum name="dismiss" value="1"/><enum name="choice" value="2"/></attr><attr format="enum" name="swipeActionRight"><enum name="reveal" value="0"/><enum name="dismiss" value="1"/><enum name="choice" value="2"/></attr><attr format="reference" name="swipeDrawableChecked"/><attr format="reference" name="swipeDrawableUnchecked"/></declare-styleable>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <dimen name="font_size_description">15sp</dimen>
    <dimen name="font_size_new_tag">11sp</dimen>
    <dimen name="font_size_title">17sp</dimen>
    <dimen name="height_list">90dp</dimen>
    <dimen name="line_default">1dp</dimen>
    <dimen name="list_padding">10dp</dimen>
    <dimen name="margin_default">5dp</dimen>
    <dimen name="margin_setting">20dp</dimen>
    <dimen name="padding_default">0dp</dimen>
    <dimen name="padding_new_tag">3dp</dimen>
    <dimen name="radius_default">3dp</dimen>
    <dimen name="shadow_width">15dp</dimen>
    <dimen name="size_list_image">64dp</dimen>
    <dimen name="slidingmenu_offset">60dp</dimen>
    <integer name="num_cols">1</integer>
    <string name="action_settings">Settings</string>
    <string name="app_name">swipeListLib</string>
    <string name="hello_world">Hello world!</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Line">
        <item name="android:background">@color/line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_default</item>
    </style>
    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@drawable/background_item</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ListButtonAction">
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="ListDescription">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ListFrontContent">

        <!-- <item name="android:layout_width">fill_parent</item> -->
        <!-- <item name="android:layout_height">@dimen/height_list</item> -->

        <item name="android:background">@color/background_list_front</item>
<!--         <item name="android:padding">@dimen/padding_default</item> -->
    </style>
    <style name="ListImage">
        <item name="android:layout_width">@dimen/size_list_image</item>
        <item name="android:layout_height">@dimen/size_list_image</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">@dimen/padding_default</item>
    </style>
    <style name="ListTitle">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="New">
        <item name="android:textColor">@color/text_new_tag</item>
        <item name="android:textSize">@dimen/font_size_new_tag</item>
        <item name="android:background">@drawable/background_new_tag</item>
        <item name="android:padding">@dimen/padding_new_tag</item>
    </style>
    <style name="SettingContent">
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_setting</item>
    </style>
    <style name="SettingText">
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textSize">@dimen/font_size_description</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
    </style>
    <style name="SettingTitle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>