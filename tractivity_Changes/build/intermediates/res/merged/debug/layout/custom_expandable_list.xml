<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_clr"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/day_event_parentID_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/rightlistarrow"
        android:text="Day Event"
        android:textColor="@color/black_clr"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/day_event_parentID_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/rightlistarrow"
            android:text="Day Event"
            android:textColor="@color/black_clr"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/day_event_parentID_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rightlistarrow"
                android:text="Day Event"
                android:textColor="@color/black_clr"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day_event_parentID_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rightlistarrow"
                android:text="Day Event"
                android:textColor="@color/black_clr"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day_event_parentID_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rightlistarrow"
                android:text="Day Event"
                android:textColor="@color/black_clr"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/day_event_parentID_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/rightlistarrow"
                android:text="Day Event"
                android:textColor="@color/black_clr"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>